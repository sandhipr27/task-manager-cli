tasks = []

def add_task():
    task = input("Enter task: ")
    tasks.append(task)
    print(f"âœ… Task added: {task}")

def view_tasks():
    if not tasks:
        print("âš ï¸  No tasks yet.")
    else:
        print("\nğŸ“ Task List:")
        for idx, task in enumerate(tasks, 1):
            print(f"{idx}. {task}")

def show_menu():
    print("\n=== Task Manager ===")
    print("1. Add Task")
    print("2. View Tasks")
    print("3. Exit")

while True:
    show_menu()
    choice = input("Choose an option (1-3): ")

    if choice == "1":
        add_task()
    elif choice == "2":
        view_tasks()
    elif choice == "3":
        print("ğŸ‘‹ Exiting Task Manager. Goodbye!")
        break
    else:
        print("âŒ Invalid choice. Try again.")
